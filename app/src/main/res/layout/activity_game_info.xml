<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a3x3conect.tambola.GameInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <TextView
        android:id="@+id/gname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Start Time and Date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Prizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prizes" />

    <ListView
        android:id="@+id/prizelist"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/tcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ticket Cost"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Pmoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prize Money"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/createdby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="createdby" />

    <TextView
        android:id="@+id/passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="passcode"
        android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
